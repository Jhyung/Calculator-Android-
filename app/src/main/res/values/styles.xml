<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="CustomButton.Gray" >
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_button_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButton.LightGray" >
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_button_light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButton.Orange" >
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_button_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
